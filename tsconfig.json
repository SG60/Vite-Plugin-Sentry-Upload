{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "."
	},
	"include": ["."],
	"exclude": ["node_modules", "dist"]
}
